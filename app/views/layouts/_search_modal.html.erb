<!-- モーダル・ダイアログ -->
<div class="modal fade" id="sampleModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				<h4 class="modal-title">
					<!-- タブ・メニュー -->
					<ul class="nav nav-tabs">
						<div class="row">
							<div class="col-xs-4 active"><a href="#sampleContentA" data-toggle="tab">投稿検索</a></li>
							<div class="col-xs-4"><a href="#sampleContentB" data-toggle="tab">大学検索</a></li>
							<div class="col-xs-4"><a href="#sampleContentC" data-toggle="tab">企業検索</a></li>
						</div>	
					</ul>
				</h4>
			</div>
			<div class="modal-body">
				<!-- タブ内容 -->
				<div class="tab-content">
					<div class="tab-pane active" id="sampleContentA">
						<!--product検索-->
						<%= search_form_for(@q_products, url: search_products_path, html: { method: :post }, as: :q_products)  do |f| %>
            
              <div class="form-group">
                <%= f.label :title_cont, "＜タイトル検索＞" %>
                <%= f.search_field :title_cont, class: "form-control" %>
              </div>
              
              <div class="form-group">
                <%= f.label :content_cont, "＜詳細検索＞" %>
                <%= f.search_field :content_cont, class: "form-control" %>
              </div>
              <div class="action">
              <%= f.submit "この条件で検索する", class: 'btn btn-success btn-xs' %>
              </div>
            <% end %>
					</div>
					<div class="tab-pane" id="sampleContentB">
						<!--college検索-->
						<%= search_form_for(@q_colleges, url: search_colleges_path, html: { method: :post }, as: :q_colleges)  do |f| %>
            
              <div class="form-group">
                <%= f.label :name_cont, "＜大学名検索＞" %>
                <%= f.search_field :name_cont, class: "form-control" %>
              </div>

              <div class="action">
              <%= f.submit "この条件で検索する", class: 'btn btn-success btn-xs' %>
              </div>
            <% end %>
				    </li>
					</div>
					<div class="tab-pane" id="sampleContentC">
						<!--company検索-->
						<%= search_form_for(@q_companies, url: search_companies_path, html: { method: :post }, as: :q_companies)  do |f| %>
            
              <div class="form-group">
                <%= f.label :name_cont, "＜企業名検索＞" %>
                <%= f.search_field :name_cont, class: "form-control" %>
              </div>

              <div class="action">
              <%= f.submit "この条件で検索する", class: 'btn btn-success btn-xs' %>
              </div>
            <% end %>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
			</div>
		</div>
	</div>
</div>