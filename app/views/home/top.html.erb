<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 text-center">
            <br><br><br><br>
            <!--collegeかcopmpanyどちらかがログインしていれば一覧表示-->
            <% if current_college || current_company %>
              <!--ログイン後-->
                <% if params[:q_products] %>
                  <%= render "products/products", products: @result_products %>
                  <%= will_paginate @result_products, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
                <% elsif params[:q_colleges] %>  
                  <%= render "colleges/colleges", colleges: @result_colleges %>
                  <%= will_paginate @result_colleges, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
                <% elsif params[:q_companies] %>
                  <%= render "companies/companies", companies: @result_companies %>
                  <%= will_paginate @result_companies, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
                <% else %>
                  <%= render "products/products", products: @result_products %>
                  <%= will_paginate @result_products, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
                <% end %>
              </div>
            <% else %>
              <!--ログイン前-->
              <%= link_to("大学の方はこちら","/colleges/sign_up", class: "btn btn-primary") %>
              
              <%= link_to("企業の方はこちら","/companies/sign_up", class: "btn btn-primary") %>
            <% end %>
        </div>
    </div>
</div>