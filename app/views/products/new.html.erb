<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <br>
            <h2>新規プロダクト作成</h2>
            
            <%= form_for(@product, :url => {:controller => :products, :action => :create}) do |f| %>
            
            <%= render 'layouts/error_messages', product: @product %>
                <%= f.label :title %>
                <%= f.text_field :title, placeholder: "○○字以内", class: 'form-control' %>
                
                <div class="form-group">
                  <!--picturesテーブル内のimageカラムに影響させることを指定-->
                  <%= f.fields_for :pictures, @product.pictures do |picture| %>
                    <%= picture.file_field :image, multiple: true %>
                  <% end %>  
                </div>  
                
                <%= f.label :price %>
                <%= f.text_field :price, class: 'form-control' %>
                
                <div class="field">
                  <%= f.label :content %>
                  <%= f.text_area :content, placeholder: "説明", class: "form-control" %>
                </div>
                <%= f.submit "投稿する", class: "btn btn-primary col-xs-12 col-md-offset-3 col-md-6", data: { disable_with: "送信中..." } %>
            <% end %> 
              
        </div>
    </div>
</div>
