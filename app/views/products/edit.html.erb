<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <br>
            <h2>編集</h2>
            
            <%= form_for(@product) do |f| %>
            
              <%= render 'layouts/error_messages', product: @product %>
                  <%= f.label :title %>
                  <%= f.text_field :title, placeholder: "○○字以内", class: 'form-control' %>
                  
                  <% if false %>
                  <div class="form-group">
                    <%= f.fields_for :pictures do |picture| %>
                      <%= picture.file_field :image_url, multiple: true %>
                    <% end %>  
                  </div>  
                  <% end %>
            
                  <%= f.label :price %>
                  <%= f.text_field :price, class: 'form-control' %>
                  
                  <div class="field">
                    <%= f.label :content %>
                    <%= f.text_area :content, placeholder: "説明", class: "form-control" %>
                  </div>
                  <%= f.submit "更新", class: "btn btn-primary col-xs-12 col-md-offset-3 col-md-6", data: { disable_with: "送信中..." } %>
              <% end %> 
            
            <% if false %>
            <%= form_tag("update",{method: "post"}) do %>
                <br><br><br>
                <p>タイトル</p>
                <input type="text" name="title" class="form-control" value="<%=@product.title%>">
                <br>
                <p>値段</p>
                <input type="text" name="price" class="form-control" value="<%=@product.price%>">
                <br>
                <p>本文</p>
                <textarea name="content" class="form-control" rows="30"><%=@product.content%></textarea>
                <br>
                <input type="submit" class="btn btn-primary" value="送信">
            <%end%>
            <% end %>
        </div>
    </div>
</div>