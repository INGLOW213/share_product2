<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <br><br>
            <%= link_to @product.college.name, college_path(@product.college.id)%>
            <h2><%= @product.title %></h2>
            <p class="text-danger">￥<%= @product.price %></p>
            
